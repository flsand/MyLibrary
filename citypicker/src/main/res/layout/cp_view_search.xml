<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/cp_common_bg">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:background="@drawable/cp_search_box_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@drawable/cp_ic_search"
                android:scaleType="center"
                tools:ignore="ContentDescription" />
            <EditText
                android:id="@+id/et_search"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/cp_hint_search_box"
                android:textColorHint="@color/cp_gray"
                android:maxLines="1"
                tools:text="sdfasfessdfasfesfsefsfessdfasfesfsefsfessdfasfesfsefsfesfsefsfes"
                android:inputType="text"
                android:textColor="@color/cp_alpha_gray"
                android:textSize="15sp"
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/iv_search_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:visibility="gone"
                android:src="@mipmap/cp_ic_search_clear"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>